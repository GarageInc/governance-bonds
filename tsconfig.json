{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "declaration": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "./typechain",
    "./test",
    "./scripts",
    "./deploy",
    "./tasks",
    "index.ts"
  ],
  "exclude": ["dist"],
  "files": ["./hardhat.config.ts"]
}
